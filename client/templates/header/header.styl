header
  background rgba(39, 43, 48, .1)
  height 70px
  width 100%
  position fixed
  top 0
  left 0

  .header-wrap
    width 1280px
    margin 0 auto
    padding 20px 30px
    box-sizing border-box

    .logo-wrap
      width 135px
      height 30px
      display inline-block
      padding 0
      margin 0

      a.hide-text
        display block
        font-size 0
        line-height 0
        color transparent
        text-shadow none

        .logo
          width 135px
          height 30px

    .navigation
      float right
      margin 0
      padding 0
      list-style none

      .navigation-item
        display inline-block
        line-height 30px

        .navigation-item-link
          font-family 'Montserrat', Helvetica, sans-serif
          font-size 14px
          color #fff
          padding 10px
          text-decoration none

          &.active, &:hover
            color #ffcc33
            text-decoration none
