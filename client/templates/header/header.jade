template(name="header")

  +contactUs

  if canRecommend
    +emailSendingPopup

  header

    .header-wrap
      h1.logo-wrap
        a.hide-text(href="/")
          | Rent Scene
          img.logo.animated.spin-wrapper(src="/images/logo-icon-white.png", alt="Rentscene Icon")
          img.logo-text(src="/images/logo-text-white.png", alt="Rentscene")

      ul.navigation
        li.navigation-item.hide-sm
          a.navigation-item-link(href="/city/philadelphia")
            i.fa.fa-search
            | Browse Apartments

        li.navigation-item.hide-sm
          a.navigation-item-link.contact-us(href="/")
            span Get Started

        if isMobile
          li.navigation-item
            a.navigation-item-link.active(href="tel://1-215-995-5890")
              i.fa.fa-mobile
              | (215) 995-5890

        else
          li.navigation-item.social-nav
            a.navigation-item-link(href="https://www.facebook.com/RentScene/", target="_blank", title="Like Rent Scene on Facebook")
              i.fa.fa-facebook
            a.navigation-item-link(href="https://twitter.com/RentScene", target="_blank", title="Follow Rent Scene on Twitter")
              i.fa.fa-twitter
            a.navigation-item-link(href="https://www.yelp.com/biz/rent-scene-philadelphia-2", target="_blank", title="Check out Rent Scene on Yelp")
              i.fa.fa-yelp

        if loggedInUser
          li.navigation-item.admin-login
            +userMenu

      if canManageClients
        +clientSearchBar(formClass="navbar-form navbar-right")

        if isDesktop
          +copyUrlBtn

    if canRecommend
        #recommending-client-banner.alert.alert-success
          span.m-r-10
            | Currently recommending properties for <strong>{{recommendationsClientName}}</strong>.

          if makingRecommendationList
            a#add-listings.btn.btn-sm.btn-success(href="#")
              i.fa.fa-plus-circle
              | Add More Listings

          else
            a#view-recommendations.btn.btn-sm.btn-success(href="#")
              i.fa.fa-list-ul
              | View List So Far

          | or
          a#exit-recommendation.btn.btn-sm.btn-danger(href="#")
            i.fa.fa-check-circle
            | Done Recommending

    if showClientRecommendationsBar
        #recommending-client-banner.alert.alert-success
          span.m-r-10
            | We have a few buildings <strong>recommended</strong> for you!

          a#view-recommendations.btn.btn-sm.btn-success(href="#")
            i.fa.fa-list-ul
            | Take a look
