.container.faq-page-wrap
  margin-top 40px
  margin-bottom 60px
  max-width 1100px

  section
    margin-bottom 30px
    @media screen and (min-width: 992px)
      margin-bottom 35px

    h4
      font-family 'Montserrat', 'Open Sans', Helvetica, sans-serif
      font-size 19px
      line-height 1.3

    p
      font-size 16px
      line-height 1.6
      @media screen and (min-width: 1200px)
        font-size 17px

      .nudge
        margin-left -4px

  .contact-section
    > *
      display inline-block
      border 1px solid #ccc
      height 100px
      padding 25px

    p
      background #f4f4f5
      border-radius 8px 0 0 8px
      font-size 20px
      font-weight bold
      small
        font-weight normal

    .btn-wrap
      border-left 0
      border-radius 0 8px 8px 0
      vertical-align top
      @media screen and (min-width: 768px)
        padding 25px 35px