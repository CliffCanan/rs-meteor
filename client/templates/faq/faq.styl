.container.faq-page-wrap
  margin-top 40px
  margin-bottom 60px
  max-width 1100px

  section
    margin-bottom 30px
    @media screen and (min-width: 992px)
      margin-bottom 35px

    h4
      font-family 'Montserrat', 'Open Sans', Helvetica, sans-serif
      font-size 19px
      line-height 1.3

    p
      font-size 16px
      line-height 1.6
      @media screen and (min-width: 1200px)
        font-size 17px

      .nudge
        margin-left -4px

  .contact-section
    > *
      @media screen and (min-width: 768px)
        display inline-block
        border 1px solid #ccc
        height 100px
        padding 25px

    p
      font-size 20px
      font-weight bold
      @media screen and (min-width: 768px)
        background #f7f8f9
        border-right 0
        border-radius 8px 0 0 8px

      small
        display block
        font-weight normal
        margin-top 4px

    .btn-wrap
      @media screen and (min-width: 768px)
        border-radius 0 8px 8px 0
        vertical-align top
        margin-left -4px
        padding 25px 35px
      @media screen and (min-width: 992px)
        padding 25px 45px

    @media screen and (max-width: 767px)
      background #f7f8f9
      border-radius 10px
      text-align center
      margin-left -10px
      margin-right -10px
      > *
        height 100px
        padding 15px
      p
        padding-bottom 0
        margin-bottom 0
        small
          padding 2px 15px 0
        i
          display none
