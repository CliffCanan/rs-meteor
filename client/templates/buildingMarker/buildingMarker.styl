.cpr-property-container-map
  padding 5px
  .cpr-property-map-image-link
    display inline-block
    .cpr-overlay
      max-width 180px
      .cpr-property-map-featured-image
        width 100%
    .cpr-property-map-bedrooms
      font-family 'Montserrat', Helvetica, sans-serif
      font-size 16px
      color #272b30

  .cpr-property-details-map
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 14px
    display inline-block
    vertical-align middle
    .cpr-property-map-price
      color #cc9900
      padding 0 10px 0 0
    .cpr-property-map-title
      border-left 1px solid #c7c7c7
      color #272b30
      padding 0 0 0 10px

.filterComment 
  font-size 14px  
.calculationArea
  margin 15px 0 25px 0
  padding 10px 0
  .col-md-6
    .row 
      padding-top 15px
.showCalculations
  border-top 1px solid #c7c7c7
  div
    margin-top 10px

#destinationDistance
  border-right 1px solid #c7c7c7



#destinationTimeArea
  .row
    .col-md-10
      margin 0px
      h4
        margin 0px
    .col-md-2
      margin 0px

#building-commute-calculator
  #distanceFiler
    border-radius 4px 0 0 4px
    border-right 0
    float left
    width 205px
  #calcDistance
    float left
    border-radius 0 4px 4px 0
  #commute-results
    margin-top 15px
    .travel-mode-icon
      text-align center
      width 30px
  .travel-mode-icon img
    cursor pointer

.city-side-bar
    .popover .close
      line-height 0.9

.gm-style-iw
  .travel-duration
    margin-left 5px
  .travel-distance
    font-size 11px