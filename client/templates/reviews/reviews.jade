template(name="reviews")
  if not buildingReviews.count
    p
      | No reviews yet. Be the first to <a id="review-form-link" href="#review-form-modal" data-toggle="modal">leave a review</a>!
  else
    div.average-rating
      div(property="aggregateRating", typeof="AggregateRating")
        | Rated
        span.avgRating(property="ratingValue") #{averageRating}
        | /
        span(property="bestRating") 10
        | based on
        span.reviewsCount(property="reviewCount") #{reviewsCount}
        | #{reviewText}

    ul.list-unstyled.row.reviews
      each buildingReviews
        li.col-sm-6.col-lg-6
          +review

    .row
      .col-xs-12.m-t-5
        a#review-form-link.btn.btn-primary.btn-lg.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4(href="#review-form-modal", data-toggle="modal") Leave A Review