template(name="reviews")
  if not buildingReviews.count
    p
      | No reviews yet. Be the first to <a id="review-form-link" href="#review-form-modal" data-toggle="modal">leave a review</a>!
  else
    div.average-rating(vocab="http://schema.org/", typeof="Thing")    
      div(property="aggregateRating", typeof="AggregateRating")
        | Rated
        span(property="ratingValue") #{averageRating}
        | /
        span(property="bestRating") 10
        | based on
        span(property="reviewCount") #{reviewsCount}
        | #{reviewText}
    ul.list-unstyled.row.reviews
      each buildingReviews
        li.col-lg-6
          +review

    a#review-form-link.btn.btn-link(href="#review-form-modal", data-toggle="modal") Leave a review