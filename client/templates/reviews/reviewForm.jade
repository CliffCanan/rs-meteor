template(name="reviewForm")
  div#review-form-modal.modal.fade
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type="button", data-dismiss="modal", aria-label="Close")
            i.fa.fa-times(aria-hidden="true")
          h4.modal-title Leave a new review
        .modal-body
          .nav-tabs-custom
            ul.nav.nav-tabs
              li.active
                a(href="#ratings", data-toggle="tab") Ratings
              li
                a(href="#about-you", data-toggle="tab") About you
          form#review-form.tab-content
            #ratings.tab-pane.active
              .form-group
                label.control-label Noise: Can you hear your neighbors all too well?
                label.radio-inline
                  input(type="radio", name="noise", value="1")
                  | 1
                label.radio-inline
                  input(type="radio", name="noise", value="2")
                  | 2
                label.radio-inline
                  input(type="radio", name="noise", value="3")
                  | 3
                label.radio-inline
                  input(type="radio", name="noise", value="4")
                  | 4
                label.radio-inline
                  input(type="radio", name="noise", value="5")
                  | 5
              .form-group
                label.control-label Location: Close to entertainment, restaurants, public transportation, schools, park. Safety.
                label.radio-inline
                  input(type="radio", name="location", value="1")
                  | 1
                label.radio-inline
                  input(type="radio", name="location", value="2")
                  | 2
                label.radio-inline
                  input(type="radio", name="location", value="3")
                  | 3
                label.radio-inline
                  input(type="radio", name="location", value="4")
                  | 4
                label.radio-inline
                  input(type="radio", name="location", value="5")
                  | 5
              .form-group
                label.control-label Amenities: Does this building have good laundry, common areas, gym, elevators, etc? Are they good quality?
                label.radio-inline
                  input(type="radio", name="amenities", value="1")
                  | 1
                label.radio-inline
                  input(type="radio", name="amenities", value="2")
                  | 2
                label.radio-inline
                  input(type="radio", name="amenities", value="3")
                  | 3
                label.radio-inline
                  input(type="radio", name="amenities", value="4")
                  | 4
                label.radio-inline
                  input(type="radio", name="amenities", value="5")
                  | 5
              .form-group
                label.control-label Management: Professionalism, knowledge, helpfulness, speed to address maintenance issues
                label.radio-inline
                  input(type="radio", name="management", value="1")
                  | 1
                label.radio-inline
                  input(type="radio", name="management", value="2")
                  | 2
                label.radio-inline
                  input(type="radio", name="management", value="3")
                  | 3
                label.radio-inline
                  input(type="radio", name="management", value="4")
