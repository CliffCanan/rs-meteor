#rental-application-wrapper
  max-width 1000px
  h3
    color #4588fa
    @media screen and (min-width: 768px)
      margin 30px 0 12px
    @media screen and (min-width: 1200px)
      margin 36px 0 16px
  .well
    font-size 16px

  .application-dates
    margin-top 25px

  table
    td
      vertical-align middle
    a i
      cursor pointer

  .form-group
    margin-bottom 15px
    width 100%
    label
      text-align right

  .section-spacer
    background rgba(0,10,20,.1)
    height 1px
    border-radius 3px
    margin 10px auto 30px

  label > small
    display block
    font-size 80%
    font-weight normal

  .pets-wrapper
    display none

  .criminal-history-input-wrapper
    .form-group .col-sm-1
      padding 0 5px

  select.document-type.other
    width 70px

  .document-type-other-wrapper
    display inline
    position relative
    input.document-type-other
      cursor auto
      padding-right 22px
    i
      display none
      position absolute
      right 5px
      top 3px
      z-index 999

  p.text-cond
    color #666
    font-size 13.5px
    line-height 1.5

  p.affirmation
    font-size 18px
    font-weight 600
    line-height 1.5
    margin 20px 0
    a
      font-weight 600
    
  #signature
    border 5px solid #CCC
    margin-bottom 20px
    width 400px

  .dropzone
    min-height 0
    border none
    padding 0
    .dz-message
      font-size 16px
      font-weight bold
      color #4588fa
      &:hover, &:focus
        color #23527c
        text-decoration underline
    &.dz-started .dz-message
      display block

  #dropzone-template-container
    display none
    
  #rental-application-show-revisions .modal-content
    width 500px