#rental-application-wrapper

  h3
    color #4588fa
  .well
    font-size 16px

  .application-dates
    margin-top 25px
  .dropzone
    min-height 0
    border none
    padding 0
  .dropzone
    .dz-message
      color #4588fa
      &:hover, &:focus
        color #23527c
        text-decoration underline
    &.dz-started .dz-message
      display block

  table
    td
      vertical-align middle
    a i
      cursor pointer

  .form-group
    width 100%
      
  .pets-wrapper
    display none
      
  select.document-type.other
    width 70px

  .document-type-other-wrapper
    display inline
    position relative
    input.document-type-other
      cursor auto
      padding-right 22px
    i
      display none
      position absolute
      right 5px
      top 3px
      z-index 999
      
  #signature
    border 5px solid #CCC
    margin-bottom 20px
    width 400px

  #dropzone-template-container
    display none
    
  #rental-application-show-revisions .modal-content
    width 500px