.home-page-bg
  display block
  left 0
  top 0
  background url(/images/homepage-img.jpg) no-repeat center top
  background-size cover
  width 100%
  height 1100px
  position absolute
  z-index -1

.head-section-wrap
  position relative
  width 100%
  height 850px
  @media screen and (min-width: 768px)
    height 650px
  @media screen and (min-width: 1200px)
    height 700px

.head-section
  max-width 1280px
  margin 0 auto
  text-align center
  box-sizing border-box
  padding 0 4%
  text-shadow 0 2px 1px rgba(0,0,0,0.45)
  @media screen and (min-width: 768px)
    padding 20px 30px 0
    text-shadow 0 3px 2px rgba(0,0,0,.45)

.head-section-title
  font-family 'Montserrat', Helvetica, sans-serif
  font-size 30px
  letter-spacing 2px
  padding 15px 0
  @media screen and (min-width: 768px)
    font-size 46px
    padding 20px 0
  font-weight bold
  text-transform uppercase
  color #fff
  margin 0

.main-desc
  max-width 820px
  display inline-block
  color #fff
  font-size 20px
  padding 10px
  background rgba(0,0,0,.6)
  @media screen and (min-width: 768px)
    background transparent
    font-size 24px
  margin 0

.home-page
  .benefits-wrap
    color #FFF
    margin 30px auto 20px
    position relative
    padding 1px 20px 20px
    background rgba(0,0,0,.75)
    @media screen and (min-width: 768px)
      background transparent
      width 260px
    .fa-plus
      display none
      font-size 24px
      left 250px
      position absolute
      top 135px
      z-index 999
  .buttons-wrap
    text-shadow: none
  .concierge-wrap, .technology-wrap
    background rgba(0, 0, 0, .3)
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    h3
      margin-top 30px
    ul
      margin-left 80px
      margin-top 130px
      margin-bottom 0
      li
        text-align left
        width 180px
      i
        color #a0c6e6
        width 35px
  blockquote:before
    display none

  .concierge-wrap
    background transparent url('/concierge.png') no-repeat center
  
  .technology-wrap
    background transparent url('/screens.png') no-repeat center
    
  @media screen and (min-width: 768px)
    .home-page-bg
      height 960px
    .benefits-wrap
      height 300px
      width 520px
      .fa-plus
        display block
    .concierge-wrap, .technology-wrap
      background-color rgba(0,0,0,0.5)
      height 300px
      position absolute
      width 300px
      h3
        margin-top 40px
      ul
        margin-top 150px
    .concierge-wrap
      background-position 70px
      left 0
    .technology-wrap
      background-position 90px
      right 0
    .buttons-wrap
      margin-top 10px

  .buttons-wrap
    margin 0 auto
    margin-top 20px
    text-align left
    width 270px
    @media screen and (min-width: 360px)
      width 320px
    @media screen and (min-width: 768px)
      margin-top 0
      width 540px
    .col-lg-6
      padding 0

  .button-shadow
    background rgba(0, 0, 0, .3)
    border-radius 5px
    padding 5px
    position relative
    
  .button-text
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 16px
    font-weight normal
    border-radius 5px
    box-sizing border-box
    width 100%
    
  .button-browse:after
    content: "\25BC";
    display: inline-block;
    float: right;
    
  .button-expert:after
    content: "\25B6";
    display: inline-block;
    float: right;

.city-list
  background #fff
  display none
  border-radius 5px
  margin 0 5px
  text-align left
  position absolute
  width: 96%

.city-item
  text-decoration none
  &:hover
    background-color #4588fa
    &:first-child
      border-radius 5px 5px 0 0
    &:last-child
      border-radius 0 0 5px 5px
  .city-item-link
    padding 10px
    @media screen and (min-width: 768px)
      padding 15px
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 16px
    color #555
    display block
    &:hover
      color #fff
      text-decoration none

.more-info
  position absolute
  left 20px
  bottom 20px
  display block
  text-align left
  color #fff
  font-family 'Montserrat', Helvetica, sans-serif
  font-size 14px
  text-decoration none
  &.active, &:hover, &:focus
    color #ffcc33
    text-decoration none
  &:before
    content ""
    background url(/images/scroll-icon.png) no-repeat left center
    display inline-block
    width 22px
    height 36px
    vertical-align middle
    padding 0 28px 0 0
  &:hover:before, &:focus:before
    background url(/images/scroll-icon-hover.png) no-repeat left center

.testimonials-wrap
  background #ececec
  width 100%
  min-height 510px

.testimonials
  max-width 1280px
  margin 0 auto
  padding 60px 0
  text-align center
  overflow hidden

  img
    box-shadow 0 3px 10px -2px rgba(0,0,0,.3)
    border-radius 50%

article
  margin 0 0 20px
  min-height 280px

blockquote
  border 1px solid #c7c7c7
  border-radius 5px
  background #fff
  min-height 242px
  @media screen and (min-width: 768px)
    min-height 242px
    box-shadow 0 3px 14px -4px rgba(0,0,0,.25)
  @media screen and (min-width: 992px)
    min-height 205px
  @media screen and (min-width: 1200px)
    min-height 270px
    box-shadow 0 4px 18px -5px rgba(0,0,0,.38)
  padding 20px
  box-sizing border-box
  margin 0 0 15px
  text-align left
  line-height 20px
  position relative
  &:after
    position absolute
    bottom -12px
    left 48%
    display inline-block
    content "\25BC"
    color #fff
    text-shadow 0 2px 2px rgba(0, 0, 0, 0.3)

.quote-desc
  padding 0
  margin 0
  font-size 14px
  @media screen and (min-width: 992px)
    font-size 15px
  font-weight bold
  line-height 1.5

.quote-footer
  font-size 100%
  &:before
    content ""
  .quote-author
    position absolute
    bottom 10px
    font-weight bold
    font-family 'Montserrat', Helvetica, sans-serif
    box-sizing border-box
    font-size 15px

  .quote-author-link
    font-family 'Raleway', Helvetica, sans-serif
    color #cc9900
    display block
    padding 0
    text-decoration none
    font-size 13px
    &:hover
      color #ffcc33
      text-decoration none

.footer-section
  background #fff
  width 100%
  text-align center

.footer-section-title
  font-family 'Montserrat', Helvetica, sans-serif
  font-size 26px
  padding 40px 0

.services-list
  margin-bottom 40px
  .services-item
    display inline-block
    margin-bottom 12px
    width 95%
    box-sizing border-box
    @media screen and (min-width: 768px)
      margin 0 20px 20px 0
      width 320px
    .footer-section-sub-title
      font-family 'Montserrat', Helvetica, sans-serif
      font-size 18px
    .footer-section-desc
      font-family 'Raleway', Helvetica, sans-serif
      font-size 16px
    .footer-section-btn
      color #4588fa

#ui-datepicker-div 
  z-index 9999 !important
