.home-page-bg
  display block
  left 0
  top 0
  background url(/images/homepage-img.jpg) no-repeat center top
  background-size cover
  width 100%
  height 960px
  position absolute
  z-index -1

.head-section-wrap
  position relative
  width 100%
  height 750px

.head-section
  max-width 1280px
  margin 0 auto
  text-align center
  padding 50px 30px 0
  box-sizing border-box

.head-section-title
  font-family 'Montserrat', Helvetica, sans-serif
  font-size 30px
  @media screen and (min-width: 768px)
    font-size 46px
  font-weight bold
  text-transform uppercase
  color #fff
  margin 0
  padding 20px 0

.main-desc
  max-width 820px
  display inline-block
  color #fff
  font-size 20px
  @media screen and (min-width: 768px)
    font-size 24px
  margin 0
  padding 0

.home-page
  .benefits-wrap
    color #FFF
    margin 40px 0 0
    position relative

  .benefits-shadow
    background rgba(0, 0, 0, .3)
    border-radius 5px
    display inline-block
    padding 10px 0
    position relative
    width 260px
    @media screen and (min-width: 360px)
      width 315px
    @media screen and (min-width: 768px)
      width 500px

  .benefits-shadow-heading
    margin-top 10px
    padding 0
    h3
      font-size 20px
    
  .benefits-shadow-list
    padding 0
    text-align left
    ul
      margin-bottom 0
    i
      color #a0c6e6

  .buttons-wrap
    margin 0 auto
    margin-top 10px
    text-align left
    width 260px
    @media screen and (min-width: 360px)
      width 315px
    @media screen and (min-width: 768px)
      margin-top 0
      width 500px
    .col-lg-6
      padding 0

  .button-shadow
    background rgba(0, 0, 0, .3)
    border-radius 5px
    padding 5px
    position relative
    
  .button-text
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 16px
    display inline-block
    background-color #4588fa
    color #fff
    padding 10px 15px
    border-radius 5px
    box-sizing border-box
    width 100%
    
  .button-browse:after
    content: "\25BC";
    display: inline-block;
    float: right;
    
  .button-expert:after
    content: "\25B6";
    display: inline-block;
    float: right;

.city-list
  background #fff
  display none
  border-radius 5px
  margin 0 5px
  text-align left

.city-item
  text-decoration none
  &:hover
    background-color #4588fa
    &:first-child
      border-radius 5px 5px 0 0
    &:last-child
      border-radius 0 0 5px 5px
  .city-item-link
    padding 10px
    @media screen and (min-width: 768px)
      padding 15px
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 16px
    color #555
    display block
    &:hover
      color #fff
      text-decoration none

.more-info
  position absolute
  left 20px
  bottom 20px
  display block
  text-align left
  color #fff
  font-family 'Montserrat', Helvetica, sans-serif
  font-size 14px
  text-decoration none
  &.active, &:hover, &:focus
    color #ffcc33
    text-decoration none
  &:before
    content ""
    background url(/images/scroll-icon.png) no-repeat left center
    display inline-block
    width 22px
    height 36px
    vertical-align middle
    padding 0 28px 0 0
  &:hover:before, &:focus:before
    background url(/images/scroll-icon-hover.png) no-repeat left center

.testimonials-wrap
  background #ececec
  width 100%
  min-height 510px

.testimonials
  max-width 1280px
  margin 0 auto
  padding 60px 0
  text-align center
  overflow hidden

article
  margin 0 0 20px
  min-height 280px

blockquote
  border 1px solid #c7c7c7
  border-radius 5px
  background #fff
  min-height 242px
  @media screen and (min-width: 768px)
    min-height 242px
  @media screen and (min-width: 992px)
    min-height 181px
  @media screen and (min-width: 1200px)
    min-height 286px
  padding 20px
  box-sizing border-box
  margin 0 0 15px
  text-align left
  line-height 20px
  position relative
  &:after
    position absolute
    bottom -12px
    left 48%
    display inline-block
    content "\25BC"
    color #fff
    text-shadow 0 2px 2px rgba(0, 0, 0, 0.3)

.quote-desc
  padding 0
  margin 0
  font-size 14px
  font-weight bold
  line-height 22px

.quote-footer
  font-size 100%
  &:before
    content ""
  .quote-author
    position absolute
    bottom 10px
    font-weight bold
    font-family 'Montserrat', Helvetica, sans-serif
    box-sizing border-box
    font-size 15px

  .quote-author-link
    font-family 'Raleway', Helvetica, sans-serif
    color #cc9900
    display block
    padding 0
    text-decoration none
    font-size 13px
    &:hover
      color #ffcc33
      text-decoration none

.footer-section
  background #fff
  width 100%
  text-align center

.footer-section-title
  font-family 'Montserrat', Helvetica, sans-serif
  font-size 26px
  padding 40px 0

.services-list
  margin-bottom 40px
  .services-item
    display inline-block
    width 320px
    box-sizing border-box
    margin 0 20px 20px 0
    .footer-section-sub-title
      font-family 'Montserrat', Helvetica, sans-serif
      font-size 18px
    .footer-section-desc
      font-family 'Raleway', Helvetica, sans-serif
      font-size 16px
    .footer-section-btn
      color #4588fa



