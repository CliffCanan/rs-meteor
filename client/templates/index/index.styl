.home-page-bg
  display block
  left 0
  top 0
  //background url(/images/home-bg/homepage-img.jpg) no-repeat center top
  background-size cover
  width 100%
  height 960px
  position absolute !important
  z-index -1
  @media screen and (min-width: 768px)
    height 740px
  @media screen and (min-width: 992px)
    height 750px
  @media screen and (min-width: 1200px)
    height 730px

.head-section-wrap
  position relative
  width 100%
  height 890px
  @media screen and (min-width: 768px)
    height 640px
  @media screen and (min-width: 1200px)
    height 660px

.head-section
  max-width 1280px
  margin 0 auto
  text-align center
  box-sizing border-box
  padding 0 4%
  text-shadow 0 2px 1px rgba(0,0,0,0.45)
  @media screen and (min-width: 768px)
    padding 15px 30px 0

.head-section-title
  font-family 'Montserrat', Helvetica, sans-serif
  font-size 30px
  letter-spacing 2px
  padding 12px 0
  font-weight bold
  text-transform uppercase
  color #fff
  margin 0
  @media screen and (min-width: 768px)
    font-size 45px
  @media screen and (min-width: 992px)
    padding 10px 0 5px

.main-desc
  max-width 820px
  display inline-block
  color #fff
  font-size 20px
  padding 10px
  background rgba(6,8,11,.6)
  text-shadow 0 2px 30px rgba(0,0,0,0.75), 0 2px 0px rgba(0,0,0,0.5)
  @media screen and (min-width: 768px)
    background transparent
    font-size 24px
  margin 0

.home-page
  .benefits-wrap
    color #FFF
    margin 30px auto 20px
    position relative
    padding 1px 20px 20px
    background rgba(6,8,11,.6)
    @media screen and (min-width: 768px)
      background transparent
      height 300px
      width 565px
    @media screen and (min-width: 992px)
      height 325px
      width 570px
    @media screen and (min-width: 1200px)
      width 590px
    .fa-plus
      display none
      font-size 35px
      left 260px
      position absolute
      top 138px
      z-index 999
      @media screen and (min-width: 768px)
        display block
      @media screen and (min-width: 1200px)
        left 280px
        top 143px

  .buttons-wrap
    text-shadow none
    @media screen and (min-width: 768px)
      margin 45px auto
      width 540px
    @media screen and (min-width: 992px)
      margin 25px auto
      text-align left
      width 570px
      .col-md-6
        padding-left 10px
        padding-right 10px

  .concierge-wrap,
  .technology-wrap
    -moz-border-radius: 50%;
    -webkit-border-radius: 50%;
    border-radius: 50%;
    @media screen and (min-width: 768px)
      background-color rgba(6,8,11,.6) !important
      position absolute
      height 320px
      width 320px
    @media screen and (min-width: 1200px)
      height 330px
      width 330px
    h3
      margin-top 18px
      letter-spacing .5px
      max-width 100%
      width 100%
      @media screen and (min-width: 768px)
        margin 40px auto 0
      @media screen and (min-width: 1200px)
        letter-spacing .25px
    ul
      max-width 50%
      margin 130px auto 0
      font-family 'Open Sans', 'Raleway', Helvetica, Arial, sans-serif
      font-size 15px
      font-weight normal
      @media screen and (min-width: 768px)
        margin 130px auto 0
      @media screen and (min-width: 768px)
        margin-top 135px
      li
        text-align left
        width 180px
        @media screen and (min-width: 768px)
          width 194px
          font-size 16px
        @media screen and (min-width: 1200px)
          width 200px
          font-size 17px
      i
        color #5894fb
        width 35px

  blockquote:before
    display none

  .concierge-wrap
    background transparent url('/images/concierge.png') no-repeat center 65px
    @media screen and (min-width: 768px)
      background-size 140px
      background-position center 110px
      left 0
    @media screen and (min-width: 1200px)
      background-position center 114px
  
  .technology-wrap
    background transparent url('/images/screens.png') no-repeat center
    @media screen and (min-width: 768px)
      background-size 122px
      background-position center
      right 0
    @media screen and (min-width: 1200px)
      background-size 122px
      background-position center 112px

  .button-shadow
    background rgba(0,0,0,.3)
    border-radius 5px
    padding 5px
    position relative
    
  .button-text
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 16px
    font-weight normal
    border-radius 5px
    box-sizing border-box
    width 100%
    @media screen and (min-width: 1200px)
      font-size 17px

.city-list
  background #fff
  display none
  border-radius 5px
  margin 0 5px
  text-align left
  position absolute
  width 96%
  box-shadow 0 4px 10px -1px rgba(0,0,0,.35)
  z-index 9

.city-item
  text-decoration none
  &:hover
    background-color #4588fa
    &:first-child
      border-radius 5px 5px 0 0
    &:last-child
      border-radius 0 0 5px 5px
  .city-item-link
    padding 10px
    @media screen and (min-width: 768px)
      padding 15px
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 16px
    color #555
    display block
    &:hover
      color #fff
      text-decoration none

.testimonials-wrap
  background #ececec
  width 100%
  min-height 510px

.testimonials
  max-width 1280px
  margin 0 auto
  padding 60px 0
  text-align center
  overflow hidden
  blockquote
    @media screen and (max-width: 768px)
      padding-bottom 60px

  img
    box-shadow 0 3px 10px -2px rgba(0,0,0,.3)
    border-radius 50%

article
  margin 0 0 20px
  min-height 280px

blockquote
  border 1px solid #c7c7c7
  border-radius 5px
  background #fff
  min-height 242px
  @media screen and (min-width: 768px)
    min-height 222px
    box-shadow 0 3px 10px -4px rgba(0,0,0,.22)
  @media screen and (min-width: 992px)
    min-height 205px
  @media screen and (min-width: 1200px)
    min-height 290px
    box-shadow 0 4px 12px -5px rgba(0,0,0,0.3)
  padding 20px
  box-sizing border-box
  margin 0 0 15px
  text-align left
  line-height 20px
  position relative
  &:after
    position absolute
    bottom -12px
    left 48%
    display inline-block
    content "\25BC"
    color #fff
    text-shadow 0 2px 2px rgba(0, 0, 0, 0.3)

.quote-desc
  padding 0
  margin 0
  font-family 'Open Sans', 'Raleway', Arial, sans-serif
  font-size 14px
  line-height 1.5
  font-weight 500
  @media screen and (min-width: 992px)
    font-size 15px

.quote-footer
  font-size 100%
  &:before
    content ""
  .quote-author
    position absolute
    bottom 10px
    font-weight bold
    font-family 'Montserrat', Helvetica, sans-serif
    box-sizing border-box
    font-size 15px

  .quote-author-link
    font-family 'Raleway', Helvetica, sans-serif
    color #cc9900
    display block
    padding 0
    text-decoration none
    font-size 13px
    &:hover
      color #ffcc33
      text-decoration none

.main-section
  background #fff
  text-align center
  padding 5px 0
  &.featured-props-wrap
    padding-left 0 !important
    padding-right 0 !important
  @media screen and (min-width: 992px)
    padding 20px
  @media screen and (min-width: 1200px)
    padding 25px

  .main-section-title
    color #222
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 28px
    letter-spacing -0.5px
    line-height 1.2
    padding 30px 5px
    @media screen and (min-width: 768px)
      font-size 30px
    @media screen and (min-width: 992px)
      font-size 34px

  .main-section-subtitle
    color #666
    font-size 20px
    font-weight normal
    line-height 1.35
    margin 0 auto 25px
    max-width 550px
    @media screen and (min-width: 992px)
      margin-bottom 30px
    @media screen and (min-width: 992px)
      font-size 21px
      max-width 600px
    @media screen and (min-width: 1200px)
      font-size 22px

  &.cta
    a.btn
      border none
      border-radius 4px
      font-family "Montserrat", "Raleway", "Helvetica", Arial, sans-serif
      font-size 1.8rem
      font-weight normal
      line-height 1.428
      padding 14px 30px 14px
      text-shadow none
      @media screen and (min-width: 768px)
        font-size 2rem

  &#cta1
    @media screen and (min-width: 768px)
      margin-bottom 10px

.services-wrap
  margin-bottom 40px

  .services-item
    margin-bottom 12px
    box-sizing border-box

    .main-section-sub-title
      font-family 'Montserrat', Helvetica, sans-serif
      font-size 18px
      color #222
      letter-spacing -.2px
      @media screen and (min-width: 1200px)
        font-size 20px

    .main-section-desc
      font-family 'Raleway', Helvetica, sans-serif
      font-size 16px
      color #555

    .main-section-btn
      color #4588fa

    a
      margin-top 5px

.contact-us-section
  padding 10px 0 25px
  > div
    margin-bottom 20px
  .fa-stack
    width 110px
    height 110px
    color rgb(64,65,66)
    font-size 4.2em
    line-height 112px
    *
      transition .3s all ease-in-out
    &:hover,
    &:active
      .fa-stack-1x
        color white !important
      .fa-stack-2x
        border-width 55px
    .fa-stack-1x.fa-search
      font-size 75%
    .fa-stack-2x
      font-size 0
      color white
      border 4px solid #4caeff
      border-radius 50%
      height 100%
  .caption
    color #459de6
    display block
    font-size 18px
    font-weight 600
  .btn
    transition .15s all ease
    &:active
      margin-top 3px
      margin-bottom -3px
  @media screen and (min-width: 600px)
    display none

#ui-datepicker-div 
  z-index 9999 !important

.vegas-overlay
  opacity .2