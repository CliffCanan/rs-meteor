template(name="index")
  .home-page-bg

  section.head-section-wrap.clearfix
    .head-section

      h2.head-section-title
        span.hide-sm Apartment Hunting
        span.hide-mdlg Renting
        span For Busy People

      p.main-desc
        | We'll manage the entire process, from searching to signing.
        span.hide-sm Find out how easy it is.

      .benefits-wrap
        i.fa.fa-plus

        .concierge-wrap
          h3 Full-Service
            br
            | Apartment Search
          ul.fa-ul
            li
              i.fa-li.fa.fa-check
              | Personal Advice
            li
              i.fa-li.fa.fa-check
              | One point of contact

        .technology-wrap
          h3 Anytime, Anywhere
            br
            | Platform
          ul.fa-ul
            li
              i.fa-li.fa.fa-check
              | Tour scheduling
            li
              i.fa-li.fa.fa-check
              | Applications &amp; payments
          
      .buttons-wrap
        .col-md-6
          .button-shadow
            a#expert-button(href="#")
              button.btn.btn-lg.btn-success.button-text.button-expert
                i.fa.fa-user.m-r-5
                | Talk To An Expert
                i.fa.fa-angle-right.m-l-10

        .col-md-6
          .button-shadow
            a#browse-button(href="#")
              button.btn.btn-lg.btn-primary.button-text.button-browse
                i.fa.fa-globe.m-r-5
                | Browse Apartments
                i.fa.fa-angle-right.m-l-10

          ul.city-list.list-unstyled
            each cities
              li.city-item
                a.city-item-link(href="{{pathFor route='city' data=getCityData}}") {{value}}


  +featuredProps


  section.main-section.clearfix
    h2.main-section-title Your Personal Search Assistant

    .container.services-wrap

      .col-xs-12.col-sm-4.services-item
        img(src="/images/personal.png", alt="Expert Advice")
        h3.main-section-sub-title Expert Advice
        p.main-section-desc Work with a local expert every step of your apartment search.
          a.show#getStarted(href="#") Get started
            i.fa.fa-caret-right.m-l-10

      .col-xs-12.col-sm-4.services-item
        img(src="/images/photo-camera.png", alt="Tour Virtually")
        h3.main-section-sub-title
          | Tour Virtually
        p.main-section-desc
          | Can't make it in person? Request videos to rent confidently from anywhere.
          a.show(href="/city/philadelphia/") Search now
            i.fa.fa-caret-right.m-l-10

      .col-xs-12.col-sm-4.services-item
        img(src="/images/key.png", alt="Apply Online")
        h3.main-section-sub-title Apply Online
        p.main-section-desc Submit one application and ditch the checkbook with secure online payments.
          a.show(href="https://www.nooch.com/rentscene?price=alt&utm_source=rent-scene-homepg&utm_medium=body-content&utm_content=learn-more-btn&utm_campaign=static", target="_blank") Learn more
            i.fa.fa-caret-right.m-l-10


  section.testimonials-wrap.clearfix
    .testimonials
