.neighborhood-header-wrap
  background rgba(0,0,0,0) no-repeat scroll center top
  border-top 1px solid rgba(0,0,0,.1)
  background-color #fff
  background-repeat no-repeat
  background-size cover
  background-position 0
  width 100%
  min-height 240px
  position relative
  margin-bottom 3%
  @media screen and (min-width: 768px)
    min-height 300px
  @media screen and (min-width: 992px)
    min-height 360px
  @media screen and (min-width: 1200px)
    min-height 425px

  .main-section-title
    background-color rgba(0,0,0,.5)
    color #fff
    text-shadow 0 2px 1px
    text-transform uppercase
    position absolute
    bottom 2%
    left 6%
    letter-spacing .5px
    font-weight bold
    font-size 26px
    padding 18px
    text-shadow 1px 2px 0 rgba(0,0,0,.5)
    @media screen and (min-width: 768px)
      font-size 32px
      letter-spacing 1px
      padding 22px
      text-shadow 1px 3px 1px rgba(0,0,0,.5)
    @media screen and (min-width: 992px)
      font-size 38px
      padding 25px
  
.main-content
  padding-top 35px
  @media screen and (min-width: 768px)
    padding-top 50px
  @media screen and (min-width: 992px)
    padding-top 60px

  h3
    border-left 4px solid #4588fa
    font-style italic
    margin 0 0 25px
    padding 3% 10px 3% 3%

  .map-view
    border-radius 8px
    @media screen and (min-width: 768px)
      -webkit-box-shadow 1px 2px 12px -3px rgba(0,0,0,.2)
      box-shadow 1px 2px 12px -3px rgba(0,0,0,.2)
    @media screen and (min-width: 992px)
      -webkit-box-shadow 1px 3px 14px -3px rgba(0,0,0,.25)
      box-shadow 1px 3px 14px -3px rgba(0,0,0,.25)