#quick-view-table
  .recommend-toggle-wrapper
    float left
    margin-right 5px
    width 8%
  .title-wrapper
    float left
    width 84%
  a.recommend-toggle
    box-shadow none
    color #000
    margin-right 2px
    position relative
    right 0
    top 0
    z-index 999
    &:hover
      color #FFEC00
      i:before
        content "\f005"
    &.active
      color #FFEC00

  tr td
    text-align center
    vertical-align middle
    &:nth-child(2)
      text-align left
  .tablesorter-hasChildRow
    background: #EEE
  .tablesorter-childRow
    td
      display none
    td:nth-child(2) .recommend-toggle-wrapper
      margin-left 15px
  tr th:nth-child(4), tr td:nth-child(4),
  tr th:nth-child(5), tr td:nth-child(5)
    display none !important
  a.toggle-units
    color #000
