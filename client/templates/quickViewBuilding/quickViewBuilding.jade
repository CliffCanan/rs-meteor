template(name="quickViewBuilding")
  if isParent
    td
      if hasChildren
        span.toggle-units(href="#")
          i.fa.fa-plus-square-o
    td
      if shouldShowRecommendToggle
        div.recommend-toggle-wrapper
          a.recommend-toggle(href="#", class="{{#if isRecommended}}active{{/if}}", data-isrecommended="{{#if isRecommended}}true{{else}}false{{/if}}")
            if isRecommended
              i.fa.fa-star.green
            else
              i.fa.fa-star-o.green
      div.title-wrapper
        span {{title}}
    //td
  else
    td
    td
      if shouldShowRecommendToggle
        div.recommend-toggle-wrapper
          a.recommend-toggle(href="#", class="{{#if isRecommended}}active{{/if}}", data-isrecommended="{{#if isRecommended}}true{{else}}false{{/if}}")
            if isRecommended
              i.fa.fa-star.green
            else
              i.fa.fa-star-o.green
      div.title-wrapper
        a(href="{{pathFor route='building' data=processedRouteData}}") {{title}}
    //td
  //td {{cityId}}
  //td {{btype}}
  if isParent
    td {{availableBedroomTypes}}
  else
    td {{bedroomTypes ../queryBtype}}
  td {{bathrooms}}
  td {{getSqft}}
  if isParent
    td {{availableSecurityValues}}
    td {{availableLaundryValues}}
    td
  else
    td {{securityValue}}
    td {{laundryValue}}
    td
      span(data-toggle="tooltip", title=modifiedAtFormatted style=availableAtStyle) {{availableAtFormatted}}
  if isParent
    td {{overallPriceRange ../queryBtype}}
  else
    td {{displayBuildingPrice ../queryBtype}}
