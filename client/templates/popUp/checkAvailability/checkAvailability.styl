.modal-dialog
  max-width 500px
  .availability-form
    padding 15px
    @media screen and (min-width: 768px)
      padding 5%
    .modal-header
      border 0 none
      font-family 'Montserrat', Helvetica, sans-serif
      font-size 18px
      color #272b30
      box-sizing border-box
      padding 0 0 15px
      .close i
        color #272b30
        @media screen and (min-width: 768px)
          position relative
          top -10px
          left 10px

    .modal-body
      box-sizing border-box
      padding 0
      .availability-field
        margin-bottom 20px
        font-family 'Montserrat', Helvetica, sans-serif
        font-size 14px
        color #272b30
        font-weight bold
        .form-control
          &::-webkit-input-placeholder
            color #272b30
        .form-group
          .form-control
            color #272b30
            &::-webkit-input-placeholder
              color #272b30
        .form-control[name="bedrooms"]
          @media screen and (min-width: 768px)
            width 216px
        .availability-text
          padding 0 20px 0 0
          &.required:after
            content "*"
            color #aaa
            font-size 18px
        .input-group
          width 100%
          .input-group-addon
            width 42px

    .modal-footer
      border 0 none
      padding 0
      .form-group
        .btn
          background-color #4588fa