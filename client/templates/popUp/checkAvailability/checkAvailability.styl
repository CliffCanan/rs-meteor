.modal-dialog
  max-width 500px

  .availability-form
    padding 15px 15px 0
    @media screen and (min-width: 768px)
      padding 5% 5% 0
    @media screen and (min-width: 992px)
      padding 6% 5% 0
    @media screen and (min-width: 1200px)
      padding 20px 40px 0

    .modal-header
      border 0 none
      font-family 'Montserrat', Helvetica, sans-serif
      font-size 18px
      color #272b30
      box-sizing border-box
      padding 0 0 10px

      @media screen and (min-width: 768px)
        padding 0 0 14px
      .close i
        color #272b30
        @media screen and (min-width: 768px)
          position relative
          top -10px
          left 10px

    .modal-body
      box-sizing border-box
      padding 0

      p > .text-primary
        margin-right -3px

      .availability-field
        &#bedrooms-wrapper
          .form-group
            width 100%
        margin-bottom 20px
        font-family 'Montserrat', Helvetica, sans-serif
        font-size 14px
        color #272b30
        font-weight bold

        &#msgGrp
          font-weight normal
          margin-top 20px

        .form-control
          &::-webkit-input-placeholder
            color #272b30

        .form-group
          .form-control
            color #272b30
            &::-webkit-input-placeholder
              color #272b30

        .availability-text
          padding 0 20px 0 0
          &.required:after
            content "*"
            color #aaa
            font-size 18px
        .input-group
          width 100%
          .input-group-addon
            width 42px

    .modal-footer
      font-size 16px
      margin-top 15px
      margin-left -15px
      margin-right -15px
      text-align center
      @media screen and (min-width: 768px)
        margin-top 20px
        margin-left -6%
        margin-right -6%
      @media screen and (min-width: 1200px)
        margin-left -40px
        margin-right -40px

      .period
        margin-left -3px