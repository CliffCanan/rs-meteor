template(name="city")
  .city-page-wrap.row

    +cityHeader

    .main-city-list-wrap.clearfix.container-fluid.pull-left
      ul.main-city-list.list-unstyled.row
        each buildings
          li.col-lg-4.col-md-6.col-sm-6.col-xs-12
            .main-city-item
              a.main-city-img-link(href="{{pathFor route='building'}}")
                with mainImage
                  img(src="{{url store='thumbs'}}")
              .main-city-item-wrap
                h2.main-city-item-title
                  a.main-city-item-link(href="{{pathFor route='building'}}") {{name}}
                span.main-city-info-btn.fa.fa-question-circle.pull-right
                .main-city-info.clearfix
                  i.fa(class="{{#if parentId}}fa-key{{else}}fa-building{{/if}}")
                  span.main-city-price
                    | {{priceFrom}}
                  span.main-city-desc
                    | {{bedroomTypes}}


    .city-side-bar.pull-right.clearfix
      .map
