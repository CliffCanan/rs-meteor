      width 410px

    .filter-title
      font-size 15px
      font-weight bold
      letter-spacing .25px
      line-height 1.35
      margin 0 0 10px

    .filter-list
      margin 0 -10px
      padding 5px 0
      @media screen and (min-width: 768px)
        margin 0 -15px
        padding 0

    .city-features-date
      font-size 13px
      display block
      margin 0 0 20px
      .input-group
        margin-top 5px

  .features-section
    left auto
    right 0
    @media screen and (min-width: 768px)
      left 0 !important
      right auto !important

  .neighborhoods-section
    padding-bottom 10px
    ul
      padding-bottom 0
    li
      padding-bottom 6px
      padding-right 5px

  .location-filter-section
    padding 10px 15px 15px
    @media screen and (min-width: 768px)
      left 0
      padding 22px
      width 340px

