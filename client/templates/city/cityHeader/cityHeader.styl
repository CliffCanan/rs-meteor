    width 100%
    float none

  .neighborhoods-section
    .filter-title
      @media screen and (min-width: 992px)
        padding-bottom 10px !important
      i
        font-size 130%
        position relative
        top 1px

    #clear-neighborhoods
      color #888
      display inline-block
      font-size 14.5px
      font-weight 300
      padding 2px 0
      @media screen and (min-width: 992px)
        padding 2px 10px 0 0

  .features-btn
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 14px
    color #272b30

  .btn.dropdown-toggle.city-sub-header-title
    .caret
      position absolute
      top 19px
      right 18%

.open
  .dropdown-menu
    border-top 1px solid #DCDCDC
  & > .dropdown-toggle
    &.btn-default
      background #fff
      border-color #ccc
      color #272b30

  .features-section, .location-filter-section, .neighborhoods-section
    width 290px
    padding 10px 
    top 38px
    border 1px solid #cfcfcf
    border-top 0
    @media screen and (min-width: 768px)
      padding 20px 
      width 410px

    .filter-title
      font-size 15px
      font-weight bold
      letter-spacing .25px
      line-height 1.35
      padding 0 0 5px
      margin 0
      text-transform capitalize

    .filter-list
      margin 0 -15px
      padding 5px 0
      @media screen and (min-width: 768px)
        padding 0

    .city-features-date
      font-size 13px
      display block
      margin 0 0 20px
      .input-group
        margin-top 5px

    .clear-btn
      padding-top 8px
      cursor pointer

  .features-section
    left auto
    right 0

  .neighborhoods-section
    padding-bottom 10px
    ul
      padding-bottom 0
    li
      padding-bottom 5px

  .location-filter-section
    padding 10px 15px 15px
    @media screen and (min-width: 768px)
      left 0
      padding 22px
      width 340px

