.city-sub-header
  background-color #ebebeb
  box-shadow 0 3px 10px -2px rgba(0,0,0,.3)
  height 0
  overflow hidden
  padding 0 20px
  box-sizing border-box
  transition all .4s ease
  z-index 101
  @media screen and (min-width: 992px)
    padding 0 25px

  @media screen and (min-width: 768px)
    .dropdown.open > .dropdown-menu
      left auto
      right 0
      &.location-filter-section
        height 260px
      .form-control
        height 42px
  .dropdown
    float left
  .btn
    height 42px

.is-down + .city-sub-header
  height 120px
  padding 10px 20px
  overflow visible
  @media screen and (min-width: 768px)
    height 72px
    padding 15px 25px
  @media screen and (min-width: 992px)
    height 78px
    box-shadow 0 3px 14px -2px rgba(0,0,0,.35)
    padding 18px 25px
  @media screen and (min-width: 1200px)
    padding 18px 30px


.collapse-toggle-wrap
  position absolute
  right 0
  z-index 102
  &.is-down
    top 172px
    @media screen and (min-width: 768px)
      top 92px
  @media screen and (min-width: 1250px)
    right 5px
  .btn
    height auto
    font-size 20px
    padding 1px

.city-sub-header-list-wrap
  .button-text
    display inline-block
    text-transform uppercase
  &.col-sm-2,
    padding 0 15px 10px
    @media screen and (min-width: 1200px)
      padding 0 6px
  &.bedroom-type-select
    @media screen and (min-width: 1200px)
      padding 0 10px
  &.city-select
    .button-text
      width 142px
  &.bedroom-type-select
    min-width 122px
    .city-sub-header-list
      padding 0 9%
  .city-sub-header-title
    width 100%
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 14px
    color #272b30
    font-weight normal
    text-align left
    padding 5px 15px

  .city-sub-header-list
    box-sizing border-box
    min-width 100px
    padding 0 20px
    top 30px
    border 1px solid #cfcfcf
    border-top 0
    border-radius 2px 2px 5px 5px
    width 99%
    text-transform uppercase
    padding-top 10px
    .city-sub-header-item
      padding 10px 0
      font-family 'Montserrat', Helvetica, sans-serif
      font-size 14px
      color #272b30
      cursor pointer
      &:hover
        color #4588fa


.city-subheader-price
  display inline-block
  font-size 0
  float left
  padding 10px 12px 2px 2px
  vertical-align top
  width 47%
  position relative
  @media screen and (max-width: 768px)
    height 54px
  @media screen and (min-width: 768px)
    padding 3px 15px 2px
    width 31%
  @media screen and (min-width: 992px)
    width 23%
  @media screen and (min-width: 1040px)
    width 24%
  b
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 13px
    color #272b30
    position absolute
    bottom 6px
    @media screen and (min-width: 768px)
      bottom -18px
      font-size 13.5px
  .city-subheader-price-val
    display none
    font-size 13px
    font-weight bold
    text-transform uppercase
    vertical-align middle
    margin-right 10px
    @media screen and (min-width: 768px)
      display inline-block
    + b
      @media screen and (min-width: 768px)
        left 60px
  .price-slider + b
    right 5px
    @media screen and (min-width: 768px)
      right 15px

  .slider.slider-horizontal
    margin 0
    left 7%
    width 90%
    @media screen and (min-width: 768px)
      width 70%
    .slider-track
      height 6px
      .slider-handle
        background #4588fa
        width 15px
        height 15px
        opacity 1
      .slider-selection
        box-shadow none
        background #8f9092


