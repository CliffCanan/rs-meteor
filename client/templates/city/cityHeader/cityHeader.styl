.city-sub-header
  background-color #ebebeb
  padding 15px 30px
  height 70px
  box-sizing border-box

.city-sub-header-list-wrap
  margin 0 10px 0 0
  .city-sub-header-title
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 14px
    color #272b30
    font-weight normal
    padding 5px 15px
  .city-sub-header-list
    display none
    background-color #ffffff
    border-color #eeeeee
    padding 0 15px
    border-right none
    border-bottom none
    border-top none
    box-shadow 1px 2px 0 0 rgba(0, 0, 0, 0.3)
    transition all 0.2s
    position relative
    top -2px
    border-radius 0 0 3px 3px
    .city-sub-header-item
      padding 10px 0
      font-family 'Montserrat', Helvetica, sans-serif
      font-size 14px
      color #272b30
      cursor pointer
      &:hover
        color #4588fa

.city-subheader-price
  margin 0 25px
  padding 8px 0
  .city-subheader-price-val
    font-size 12px
    font-weight bold
    text-transform uppercase

  b
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 14px
    color #272b30
    display inline-block
    padding 0 5px

  .slider.slider-horizontal
    .slider-track
      height 7px
      .slider-handle
        background-color #4588fa
        width 15px
        height 15px
        opacity 1
      .slider-selection
        box-shadow none
        background #8f9092

.dropdown
  margin 0 0 0 10px
  .features-btn
    font-family 'Montserrat', Helvetica, sans-serif
    font-size 14px
    color #272b30

.open
  & > .dropdown-toggle
    &.btn-default
      padding-bottom 15px
      background #fff

  .features-section
    width 500px
    box-sizing border-box
    padding 25px
    box-shadow 0 1px 0 rgba(0, 0, 0, 0.3)
    top 43px
    border 1px solid #cfcfcf
    border-top 0
    border-radius 0 3px 3px 3px
    .filter-title
      font-size 14px
      padding 0 0 10px
      margin 0
    .filter-list
      label
        font-size 16px
        color #272b30
