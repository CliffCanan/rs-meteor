.main-city-list

  .main-city-item
    .main-city-img-link

      .action-options
        background rgba(0,0,0,.75)
        border-radius 0 0 4px 4px
        box-shadow none
        height 100%
        width 100%
        opacity 0
        position absolute
        top 0
        transform scale(.82,.8)
        transition .35s all ease-out
        z-index 999

        .actions-sub-wrap
          border-bottom 1px solid rgba(210,210,210,.3)
          padding 12px 0

        .btn
          color white
          font-size 18px
          padding 8px
          width 32.3%
          &:not(.view-details-option)
            border-right 1px solid rgba(210,210,210,.3)

        .neighborhood-txt
          color rgba(240,240,240,.8)
          font-family "Montserrat", "Helvetica", "Open Sans", sans-serif
          font-size 5px
          font-weight normal
          letter-spacing .4px
          transition .35s all ease-out
          padding 25px
          text-align center
          text-transform uppercase

      &:hover
        @media screen and (min-width: 992px)
          .action-options
            opacity 1
            transform scale(1,1)
            box-shadow 0 0 50px 5px rgba(10,20,40,.7) inset
          .neighborhood-txt
            font-size 20px

    .ext-gallery
      background #fff
      box-shadow 1px 4px 15px 0px rgba(0,0,0,.5)
      position absolute
      left -1px
      top -1px
      z-index 1000
      @media screen and (min-width: 1200px)
        width 1155px
      @media screen and (min-width: 1250px)
        width 1200px
      @media screen and (min-width: 1300px)
        width 1250px
      @media screen and (min-width: 1350px)
        width 1305px

      .item
        height auto !important
        margin 3px

        img
          display block
          width 100%
          height auto

      .close-btn
        background #fff
        box-shadow 1px 2px 6px -1px rgba(0,0,0,.6)
        border-radius 5px
        cursor pointer
        text-align center
        width 26px
        height 26px
        position absolute
        top -12px
        left -10px
        transition .16s all ease
        z-index 102
        &:hover
          box-shadow 0 2px 10px 0 rgba(0,0,0,.5)
        &:active
          margin-top 2px

    .owl-controls
      display none

    .tooltip
      position absolute
      left 19% !important
      top 45px !important
      width 61.9% !important

.ext-gallery
  #forMap.is-out ~ .city-page-wrap &
    @media screen and (min-width: 1200px)
      width 840px !important
    @media screen and (min-width: 1250px)
      width 880px !important
    @media screen and (min-width: 1300px)
      width 925px !important
    @media screen and (min-width: 1350px)
      width 960px !important