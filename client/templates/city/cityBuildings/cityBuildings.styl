.main-city-list

  .main-city-item
    .main-city-img-link

      .action-options
        background rgba(0,0,0,.7)
        height 36px
        width 100%
        position absolute
        top -38px
        transition .35s all ease-out
        z-index 999

        .btn
          color white
          padding 8px
          width 32.3%
          &:not(.view-details-option)
            border-right 1px solid rgba(210,210,210,.4)

    &:hover
      @media screen and (min-width: 992px)
        .action-options
          top 0px

    .ext-gallery
      background #fff
      box-shadow 1px 4px 15px 0px rgba(0,0,0,.5)
      position absolute
      left -1px
      top -1px
      z-index 101
      @media screen and (min-width: 1200px)
        width 1155px
      @media screen and (min-width: 1250px)
        width 1200px
      @media screen and (min-width: 1300px)
        width 1250px
      @media screen and (min-width: 1350px)
        width 1305px

      .item
        height auto !important
        margin 3px

        img
          display block
          width 100%
          height auto

      .close-btn
        background #fff
        box-shadow 1px 2px 6px -1px rgba(0,0,0,.6)
        border-radius 5px
        cursor pointer
        text-align center
        width 26px
        height 26px
        position absolute
        top -12px
        left -10px
        transition .16s all ease
        z-index 102
        &:hover
          box-shadow 0 2px 10px 0 rgba(0,0,0,.5)
        &:active
          margin-top 2px

    .tooltip
      position absolute
      left 19% !important
      top 45px !important
      width 61.9% !important

.ext-gallery
  #forMap.is-out ~ .city-page-wrap &
    @media screen and (min-width: 1200px)
      width 840px !important
    @media screen and (min-width: 1250px)
      width 880px !important
    @media screen and (min-width: 1300px)
      width 925px !important
    @media screen and (min-width: 1350px)
      width 960px !important