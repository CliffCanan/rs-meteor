.main-city-list

  .main-city-item
    .main-city-img-link

      .action-options
        background rgba(0,0,0,.75)
        border-radius 0 0 4px 4px
        box-shadow none
        height 100%
        width 100%
        opacity 0
        position absolute
        top 0
        transform scale(.85,.8)
        transition .3s all ease-out
        z-index 999

        .actions-sub-wrap
          border-bottom 1px solid rgba(210,210,210,.3)
          padding 8px 0

        .btn
          color white
          font-size 18px
          padding 8px
          transition background .2s ease
          width 32.3%
          &:not(.view-details-option)
            border-right 1px solid rgba(210,210,210,.3)

          &:hover
            background rgba(240,240,240,0.16)
            border none !important
            box-shadow 0 4px 9px -3px rgba(0,0,0,.6)
            color #3fabe1

        .neighborhood-txt
          color rgba(248,248,249,.92)
          font-family "Montserrat", "Helvetica", "Open Sans", sans-serif
          font-size 15px
          font-weight normal
          letter-spacing .5px
          opacity .3
          padding 25px
          text-align center
          text-transform uppercase
          transition all .25s ease-out
          i
            margin-right 6px

      &:hover
        @media screen and (min-width: 992px)
          .action-options
            opacity 1
            transform scale(1,1)
            box-shadow 0 0 50px 5px rgba(10,20,40,.7) inset
          .neighborhood-txt
            font-size 20px
            opacity 1

    .carousel-control
      @media screen and (min-width: 1200px)
        opacity 0


    .ext-gallery
      background #fff
      box-shadow 1px 4px 15px 0px rgba(0,0,0,.5)
      position absolute
      left -1px
      top -1px
      z-index 1001
      @media screen and (min-width: 1200px)
        width 1155px
      @media screen and (min-width: 1250px)
        width 1200px
      @media screen and (min-width: 1300px)
        width 1250px
      @media screen and (min-width: 1350px)
        width 1305px

      .item
        height auto !important
        margin 3px

        img
          display block
          width 100%
          height auto

      .close-btn
        background #fff
        box-shadow 1px 2px 6px -1px rgba(0,0,0,.6)
        border-radius 5px
        cursor pointer
        text-align center
        width 26px
        height 26px
        position absolute
        top -12px
        left -10px
        transition .16s all ease
        z-index 102
        &:hover
          box-shadow 0 2px 10px 0 rgba(0,0,0,.5)
        &:active
          margin-top 2px

    .owl-controls
      display none

    .tooltip
      position absolute
      left 19% !important
      top 45px !important
      width 61.9% !important
      .tooltip-inner
        padding 4px 8px
    &.in
      opacity .96

    .mobile-check-avail-wrap
      margin 2px 15px 15px
      @media screen and (min-width: 768px)
        margin -4px 15px 15px
      @media screen and (min-width: 1200px)
        display none
        visibility none
      .btn
        height 40px
        font-size 16px

    .baths-icon img
      margin-right 5px
      width 1.2em

.ext-gallery
  #forMap.is-out ~ .city-page-wrap &
    @media screen and (min-width: 1200px)
      width 840px !important
    @media screen and (min-width: 1250px)
      width 880px !important
    @media screen and (min-width: 1300px)
      width 925px !important
    @media screen and (min-width: 1350px)
      width 960px !important