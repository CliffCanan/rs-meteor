.main-city-list

  li.full-width
    max-width 100% !important

    .main-city-item
      border 1px solid #ccc
      border-radius 5px
      box-shadow 0 3px 10px -4px rgba(0,0,0,0.14)
      padding 10px
      transition all .16s ease-out
      &:hover
        border-color #4588fa

    .main-city-img-link
      height 170px !important

      a.carousel-control
        background none
        @media screen and (min-width: 1200px)
          opacity .65

    .listingInfo
      padding-left 5px
      padding-right 5px

      .main-city-item-title
        font-family 'Montserrat', Helvetica, sans-serif
        float left
        font-size 16px
        height 18px
        margin 4px 0 10px
        overflow hidden
        padding 0
        width 100%
        @media screen and (min-width: 768px)
          font-size 17px
        @media screen and (min-width: 1200px)
          font-size 18px
          margin-bottom 14px

        .main-city-item-link
          color #272b30
          text-decoration none

        .listingNeighborhood
          border-left 1px solid #ccc
          color #666
          display inline-block
          font-family 'Raleway', 'Open Sans', Helvetica, sans-serif
          font-size 85%
          font-weight 400
          margin-left 10px
          padding-left 2%
          @media screen and (min-width: 1200px)
            margin-left 15px
          .fa
            margin-right 4px

      .ratingWrap
        font-size 15.5px
        right 4%
        .fa-star
          color #f0e60a
          margin-right 4px
          text-shadow 0 0 0 rgba(0,0,0,0.6)

      ul
        margin-left 1.8em
        > li
          display block
          font-size 14px
          margin-bottom 5px
          padding 0 5px 1px

      .listingFeaturesWrap
        .listingFeature
          float left
          font-size 12px
          margin-bottom 0
          margin-right 35px
          @media screen and (min-width: 600px)
            font-size 13px
          @media screen and (min-width: 1200px)
            margin-right 40px

    .listingActionIcons
      border-left 1px solid #ddd !important
      float right
      font-size 20px
      height 165px
      padding 25px 0 0 5px
      text-align center
      width 5%
      @media screen and (min-width: 992px)
        padding-top 40px
      @media screen and (min-width: 1200px)
        padding-top 50px

      button
        background #fff
        border none
        transition .18s color ease
        width 100%
        .fa
          margin-right 0

      .favoriteToggle:hover
        color #5cb85c
      .removeFromRecommendList:hover
        color #a94442

      .tooltip
        font-size 10.5px
        width 100% !important
        .tooltip-inner
          padding 3px 2px !important

  .main-city-item
    .main-city-img-link

      .action-options
        background rgba(0,0,0,.75)
        border-radius 0 0 4px 4px
        box-shadow none
        height 100%
        width 100%
        opacity 0
        position absolute
        top 0
        transform scale(.85,.8)
        transition .3s all ease-out
        z-index 999

        .actions-sub-wrap
          border-bottom 1px solid rgba(210,210,210,.3)
          padding 8px 0

        .tooltip
          position absolute
          left 19% !important
          top 45px !important
          width 61.9% !important
          .tooltip-inner
            padding 4px 8px
        &.in
          opacity .96


        .btn
          color white
          font-size 18px
          padding 8px
          transition background .2s ease
          width 32.3%
          &:not(.view-details-option)
            border-right 1px solid rgba(210,210,210,.3)

          &:hover
            background rgba(240,240,240,0.16)
            border none !important
            box-shadow 0 4px 9px -3px rgba(0,0,0,.6)
            color #3fabe1

        .neighborhood-txt
          color rgba(248,248,249,.92)
          font-family "Montserrat", "Helvetica", "Open Sans", sans-serif
          font-size 15px
          font-weight normal
          letter-spacing .5px
          opacity .3
          padding 25px
          text-align center
          text-transform uppercase
          transition all .25s ease-out
          i
            margin-right 6px

      &:hover
        @media screen and (min-width: 992px)
          .action-options
            opacity 1
            transform scale(1,1)
            box-shadow 0 0 50px 5px rgba(10,20,40,.7) inset
          .neighborhood-txt
            font-size 20px
            opacity 1

    .carousel-control
      @media screen and (min-width: 1200px)
        opacity 0


    .ext-gallery
      background #fff
      box-shadow 1px 4px 15px 0px rgba(0,0,0,.5)
      position absolute
      left -1px
      top -1px
      z-index 1001
      @media screen and (min-width: 1200px)
        width 1155px
      @media screen and (min-width: 1250px)
        width 1200px
      @media screen and (min-width: 1300px)
        width 1250px
      @media screen and (min-width: 1350px)
        width 1305px

      .item
        height auto !important
        margin 3px

        img
          display block
          width 100%
          height auto

      .close-btn
        background #fff
        box-shadow 1px 2px 6px -1px rgba(0,0,0,.6)
        border-radius 5px
        cursor pointer
        text-align center
        width 26px
        height 26px
        position absolute
        top -12px
        left -10px
        transition .16s all ease
        z-index 102
        &:hover
          box-shadow 0 2px 10px 0 rgba(0,0,0,.5)
        &:active
          margin-top 2px

    .owl-controls
      display none

    .mobile-check-avail-wrap
      margin 5px 15px 15px
      @media screen and (min-width: 1200px)
        display none
        visibility none
      .btn
        height 40px
        font-size 16px

    .baths-icon img
      margin-right 12px
      position relative
      top 1px
      vertical-align top
      width 18px

    .ratingWrap
      position absolute
      right 9px

.ext-gallery
  #forMap.is-out ~ .city-page-wrap &
    @media screen and (min-width: 1200px)
      width 840px !important
    @media screen and (min-width: 1250px)
      width 880px !important
    @media screen and (min-width: 1300px)
      width 925px !important
    @media screen and (min-width: 1350px)
      width 960px !important