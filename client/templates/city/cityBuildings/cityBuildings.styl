.main-city-list

  .main-city-item
    .main-city-img-link

      .action-options
        background rgba(0,0,0,.65)
        height 36px
        width 100%
        position absolute
        top -45px
        transition .5s all ease
        z-index 999

        .btn
          color white
          padding 8px
          width 49.3%
          &:not(:last-child)
            border-right 1px solid rgba(210,210,210,.4)

    &:hover
      @media screen and (min-width: 992px)
        .action-options
          top 0px

    .tooltip
      position absolute
      left 19% !important
      top 45px !important
      width 61.9% !important
