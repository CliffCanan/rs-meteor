.city-page-wrap
  padding 0

.main-city-list-wrap
  overflow auto
  background #fff
  height 100%
  width 100%
  padding 10px
  @media screen and (min-width: 768px)
    padding 15px
  @media screen and (min-width: 992px)
    padding 18px 25px
  @media screen and (min-width: 1200px)
    padding 18px 30px
  box-sizing border-box
  .main-city-list
    .main-city-item
      margin 0 0 2rem 0
      padding 15px
      padding-bottom 0
      box-sizing border-box
      border 1px solid #eeeeee
      border-radius 3px
      .main-city-img-link
        position relative
        display block
        height 200px
        overflow hidden
        &:after
          content '\A'
          position absolute
          width 100%
          height 100%
          top 0
          left 0
          background-color rgba(0,0,0,0.6)
          background-image url(/images/overlay-img.png)
          background-repeat no-repeat
          background-position center center
          opacity 0
          transition all .4s
          -webkit-transition all .4s
        &:hover
          &:after
            opacity 1
        img
          width 100%
      .main-city-item-wrap
        padding 15px 0
        .main-city-info-btn
          color #4588fa
          padding 10px 0 0
          cursor pointer
        .main-city-item-title
          padding 0
          margin 10px 0
          float left
          height 18px
          overflow hidden
          font-size 16px
          .main-city-item-link
            font-family 'Montserrat', Helvetica, sans-serif
            font-size 16px
            color #272b30
            text-decoration none

        .main-city-info
          clear both
          font-family 'Montserrat', Helvetica, sans-serif
          height 36px
          font-size 14px
          overflow hidden
          i
            font-size 18px
            padding 0 10px 0 0

          .main-city-price
            color #cc9900
            padding 0 10px 0 0
            display inline-block
            vertical-align middle
            font-size 14px
          .main-city-desc
            border-left 1px solid #c7c7c7
            color #272b30
            padding 0 0 0 10px
            font-size 14px

.city-side-bar
  height 100%
  padding 0
  float none
  @media screen and (min-width: 1200px)
    float right
  #gmap
    height 100%

.city-spinner
  margin 20px auto
  width 50px
  height 30px
  text-align center
  font-size 10px
  & > div
    background-color #4588fa
    height 100%
    width 6px
    display inline-block
    -webkit-animation stretchdelay 1.2s infinite ease-in-out
    animation stretchdelay 1.2s infinite ease-in-out
  .rect2
    -webkit-animation-delay -1.1s
    animation-delay -1.1s
  .rect3
    -webkit-animation-delay -1.0s
    animation-delay -1.0s
  .rect4
    -webkit-animation-delay -0.9s
    animation-delay -0.9s
  .rect5
    -webkit-animation-delay -0.8s
    animation-delay -0.8s

@keyframes stretchdelay
  0%, 40%, 100%
    transform scaleY(0.4)
    -webkit-transform scaleY(0.4)
  20%
    transform scaleY(1.0)
    -webkit-transform scaleY(1.0)

.loading-btn-wrap
  text-align center

.loading-btn
  background-color #4588fa
  font-weight bold
  display inline-block