.city-page-wrap
  width 1280px
  height 100%


.main-city-list-wrap
  background #fff
  height 100%
  width 100%
  padding 30px
  box-sizing border-box
  .main-city-list
    .main-city-item
      display inline-block
      width 392px
      height 340px
      margin 0 10px
      padding 10px
      box-sizing border-box
      border 1px solid #eeeeee
      border-radius 3px
      .main-city-item-wrap
        padding 5px 0 0
        .main-city-item-title
          padding 0
          margin 0
          .main-city-item-link
            font-family 'Montserrat', Helvetica, sans-serif
            font-size 18px
            color #272b30
            text-decoration none
            text-overflow ellipsis
            white-space nowrap
            overflow hidden
            display block



