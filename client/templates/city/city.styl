.city-page-wrap
  height 100%
  padding 0

.main-city-list-wrap
  overflow auto
  background #fff
  height 100%
  width 100%
  padding 18px 30px
  box-sizing border-box
  .main-city-list
    .main-city-item
      margin 0 0 2rem 0
      padding 15px
      padding-bottom 0
      box-sizing border-box
      border 1px solid #eeeeee
      border-radius 3px
      .main-city-img-link
        position relative
        display block
        height 200px
        overflow hidden
        &:after
          content '\A'
          position absolute
          width 100%
          height 100%
          top 0
          left 0
          background-color rgba(0,0,0,0.6)
          background-image url(/images/overlay-img.png)
          background-repeat no-repeat
          background-position center center
          opacity 0
          transition all .4s
          -webkit-transition all .4s
        &:hover
          &:after
            opacity 1
        img
          width 100%
      .main-city-item-wrap
        padding 15px 0
        height 95px
        .main-city-info-btn
          color #4588fa
          padding 10px 0 0
          cursor pointer
        .main-city-item-title
          padding 0
          margin 10px 0
          float left
          width 260px
          @media screen and (min-width: 970px)
            width 350px
          @media screen and (min-width: 1200px)
            width 180px
          .main-city-item-link
            font-family 'Montserrat', Helvetica, sans-serif
            font-size 18px
            color #272b30
            text-decoration none
            text-overflow ellipsis
            white-space nowrap
            overflow hidden
            display block

        .main-city-info
          clear both
          font-family 'Montserrat', Helvetica, sans-serif
          i
            font-size 20px
            padding 0 10px 0 0

          .main-city-price
            font-size 18px
            color #cc9900
            padding 0 10px 0 0
            display inline-block
            vertical-align middle

          .main-city-desc
            border-left 1px solid #c7c7c7
            font-size 16px
            color #272b30
            padding 0 0 0 10px
            text-overflow ellipsis
            white-space nowrap
            overflow hidden
            display inline-block
            vertical-align middle
            width 140px
            @media screen and (min-width: 970px)
              width 160px
            @media screen and (min-width: 1200px)
              width 100px

.city-side-bar
  height 100%
  padding 0
  float none
  @media screen and (min-width: 1200px)
    float right
  #gmap
    height 100%


