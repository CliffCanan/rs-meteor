template(name="cityQuickView")
  table#quick-view-table.table.table-hover.table-condensed.main-city-list
    thead
      tr
        th(data-sorter="false")
        th Building
        th Beds
        th Baths
        th Sqft
        th Entry
        th Laundry
        th Available
        th Price

    tbody
      each buildings
        tr(class="{{rowClass}}")
          +quickViewBuilding
        each children
          tr.tablesorter-childRow
            +quickViewBuilding

    tfoot
      tr
        th
        th Building
        th Beds
        th Baths
        th Sqft
        th Entry
        th Laundry
        th Available
        th Price
      tr
        th.ts-pager.form-horizontal
          button.btn.first(type="button")
            i.icon-step.glyphicon glyphicon-step-backward
          button.btn.prev(type="button")
            i.icon-step.glyphicon glyphicon-backward
          span.pagedisplay
          button.btn.next(type="button")
            i.icon-step.glyphicon glyphicon-forward
          button.btn.last(type="button")
            i.icon-step.glyphicon glyphicon-step-forward

  #quick-view-recommend-popup.modal.fade(tabindex='-1', role='dialog', data-backdrop="static", aria-labelledby='myModalLabel', aria-hidden='true')
    .modal-dialog
      .modal-content
        form.contact-us-form
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              i.fa.fa-times(aria-hidden='true')
            h4.modal-title Find an existing client or create a new client

          .modal-body
            +clientSearchBar(type="session")

          .modal-footer
            a#start-recommending.btn.btn-primary.btn-lg.btn-block
              | Let's Go
              i.fa.fa-chevron-circle-right.m-l-10(aria-hidden='true')
