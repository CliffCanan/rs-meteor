#login-screen .dropdown-menu {
  box-shadow: none;
  display: block;
  position: relative;
  height: 260px;
  margin: 20px auto 30px;
  float: none;
  text-transform: capitalize;
  z-index: 0;
}

#login-screen #login-dropdown-list {
  display: block;
}

/* Hides the toggle that you click on */

#login-screen a.dropdown-toggle {
  display: none;
}